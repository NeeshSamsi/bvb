// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Receipt {
  id             String   @id @default(cuid())
  invoiceNumber  String
  date           DateTime
  name           String
  class          String
  addressLine1   String
  addressLine2   String
  mobileNumber   String
  emailId        String
  pinCode        String
  state          String
  admissionFee   Float
  tuitionFee     Float
  otherFee       Float
  examinationFee Float
  annualFee      Float
  lateMiscFee    Float
  totalFee       Float
  receivedBy     String
  totalInWords   String
  paymentMethod  String
  dateInWords    String
  branch         String
}
